{
    "manifest_version": 2,
    "name": "Timesheet Automation",
    "description": "Automatically generate timesheet based on Officient.io",
    "version": "2.3",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "webRequest",
        "https://selfservice.officient.io/*"
    ],
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "options_page": "options/index.html",
    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        },
        "default_popup": "popup/index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}